@{
    ViewData["Title"] = "Library Home";
}

<div class="text-center">
    <h1 class="display-4">DZ08</h1>
    <p class="lead">Welcome to Books and Authors management system!</p>

    <div class="row mt-5">
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Manage Authors</h5>
                    <p class="card-text flex-grow-1">
                        Add, edit, view, and manage all authors in our library system.
                    </p>
                    <a asp-controller="Authors" asp-action="Index"
                       class="btn btn-primary mt-auto">View All Authors</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Manage Books</h5>
                    <p class="card-text flex-grow-1">
                        Add, edit, view, and manage all books in our library collection.
                    </p>
                    <a asp-controller="Books" asp-action="Index"
                       class="btn btn-success mt-auto">View All Books</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="alert alert-info">
                <h6><strong>Quick Start:</strong></h6>
                <p class="mb-0">
                    1. Start by adding some <a asp-controller="Authors" asp-action="Create">new authors</a><br />
                    2. Then add <a asp-controller="Books" asp-action="Create">books</a> and assign them to authors<br />
                    3. Browse and manage library collection with advanced search and filtering!
                </p>
            </div>
        </div>
    </div>
</div>