@{
    ViewData["Title"] = "DZ13 Home Page";
}

<div class="text-center">
    <h1 class="display-4">DZ13</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Students</h5>
                <p class="card-text">Manage student records with LINQ search functionality.</p>
                <a href="@Url.Action("Index", "Students")" class="btn btn-primary">View Students</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Courses</h5>
                <p class="card-text">Manage course information with sorting and search.</p>
                <a href="@Url.Action("Index", "Courses")" class="btn btn-success">View Courses</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Enrollments</h5>
                <p class="card-text">Track student course enrollments.</p>
                <a href="@Url.Action("Index", "Enrollments")" class="btn btn-info">View Enrollments</a>
            </div>
        </div>
    </div>
</div>